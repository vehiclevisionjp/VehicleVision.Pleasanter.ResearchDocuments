{
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "docs[/\\\\].*\\.md$",
        "cmd": "node docs/script/toc-single.js \"${file}\""
      }
    ]
  }
}